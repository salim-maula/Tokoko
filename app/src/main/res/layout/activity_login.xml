<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.LoginActivity"
    android:fitsSystemWindows="true"
    android:scrollbarThumbVertical="@null"
    >
    <LinearLayout
        android:id="@+id/linLogin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masuk"
            android:textColor="@color/cardview_dark_background"
            android:textSize="32sp"
            />
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Username"
            android:text="User123"
            android:textColor="@color/colorBlack"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:text="pengaman1"
            android:textColor="@color/colorBlack"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_one"
            android:text="Sign In"
            android:textColor="@color/colorWhite"
            />
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_second"
            android:text="Sign Up"
            android:textColor="@color/primary"
            />

        <!--        android:indeterminateTint="@color/colorWhite"-->
        <TextView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Masuk untuk melakukan Transaksi. Menambahkan maupun perbarui Agen, dan lainnya."
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textAlignment="center"
            />

    </LinearLayout>
</ScrollView>